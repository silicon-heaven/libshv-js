{
  "name": "libshv-js",
  "version": "4.0.0",
  "description": "Typescript implementation of libshv",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "tsc -p tsconfig.tests.json && node dist-tests/tests/test.js && node dist-tests/tests/test_json.js",
    "test:ci": "tsc -p tsconfig.tests.json && node dist-tests/tests/test.js && node dist-tests/tests/test_json.js",
    "lint": "eslint --format unix src/",
    "fix": "npm run lint -- --fix",
    "typecheck": "tsc -p tsconfig.tests.json --noEmit",
    "build": "tsc"
  },
  "author": "Elektroline",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/silicon-heaven/libshv-js.git"
  },
  "bugs": {
    "url": "https://github.com/silicon-heaven/libshv-js/issues"
  },
  "homepage": "https://github.com/silicon-heaven/libshv-js",
  "exports": {
    ".": "./dist/index.js",
    "./access": "./dist/access.js",
    "./chainpack": "./dist/chainpack.js",
    "./cpcontext": "./dist/cpcontext.js",
    "./cpon": "./dist/cpon.js",
    "./json": "./dist/json.js",
    "./rpcmessage": "./dist/rpcmessage.js",
    "./rpcvalue": "./dist/rpcvalue.js",
    "./utils": "./dist/utils.js",
    "./ws-client": "./dist/ws-client.js"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.31.0",
    "eslint-config-xo": "^0.49.0",
    "eslint-formatter-unix": "^8.40.0",
    "eslint-plugin-unicorn": "^60.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  }
}
